# ==============================================================================
# Configuración para Desarrollo Local
# ==============================================================================
# Este archivo contiene valores por defecto para desarrollo local
# Copiar a .env para usar: cp .env.local .env

# ==============================================================================
# Base de Datos PostgreSQL (Kong) - Contenedor Local
# ==============================================================================
POSTGRES_HOST=kong-db
POSTGRES_PORT=5432
POSTGRES_DB=kong
POSTGRES_USER=kong
POSTGRES_PASSWORD=kong_local_password
POSTGRES_SSL=off

# ==============================================================================
# Base de Datos MySQL (Konga) - Contenedor Local
# ==============================================================================
DB_ADAPTER=mysql
DB_HOST=konga-db
DB_PORT=3306
DB_DATABASE=konga
DB_USER=konga
DB_PASSWORD=konga_local_password

# ==============================================================================
# Kong Configuration
# ==============================================================================
KONG_DATABASE=postgres
KONG_PG_HOST=kong-db
KONG_PG_PORT=5432
KONG_PG_DATABASE=kong
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong_local_password
KONG_PG_SSL=off
KONG_PG_SSL_VERIFY=off

# Kong Admin API (accesible desde localhost)
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_ADMIN_LISTEN_SSL=0.0.0.0:8444

# Kong Proxy
KONG_PROXY_LISTEN=0.0.0.0:8000
KONG_PROXY_LISTEN_SSL=0.0.0.0:8443

# Kong Logs (stdout para debugging)
KONG_PROXY_ACCESS_LOG=/dev/stdout
KONG_ADMIN_ACCESS_LOG=/dev/stdout
KONG_PROXY_ERROR_LOG=/dev/stderr
KONG_ADMIN_ERROR_LOG=/dev/stderr

# ==============================================================================
# Konga Configuration
# ==============================================================================
NODE_ENV=development
KONGA_LOG_LEVEL=debug

# ==============================================================================
# Nginx Configuration
# ==============================================================================
NGINX_PORT=80
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# ==============================================================================
# Keycloak Integration (Opcional para local)
# ==============================================================================
KEYCLOAK_URL=https://keycloak.tudominio.com
KEYCLOAK_REALM_PE=tlm-pe
KEYCLOAK_REALM_MX=tlm-mx
KEYCLOAK_REALM_CORP=tlm-corp

# ==============================================================================
# Backend Services URLs (Usar servicios de test para local)
# ==============================================================================
# Puedes usar httpbin.org o jsonplaceholder para testing local
GESTAL_DEV_URL=https://jsonplaceholder.typicode.com
GESTAL_QA_URL=https://jsonplaceholder.typicode.com
GESTAL_PROD_URL=https://jsonplaceholder.typicode.com

SISBON_DEV_URL=https://httpbin.org
SISBON_QA_URL=https://httpbin.org
SISBON_PROD_URL=https://httpbin.org

# ==============================================================================
# Seguridad (valores de desarrollo - NO usar en producción)
# ==============================================================================
JWT_SECRET=local-development-secret-change-in-prod
JWT_EXPIRATION=3600

# Rate Limiting por Defecto (relajado para local)
RATE_LIMIT_MINUTE=10000
RATE_LIMIT_HOUR=500000

# ==============================================================================
# Identificador de Ambiente
# ==============================================================================
ENVIRONMENT=local
